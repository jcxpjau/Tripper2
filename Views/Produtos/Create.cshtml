@model Tripper.Models.Produtos

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produtos</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row g-3 align-items-center mb-3">
                <div class="col-2">
                    <label asp-for="Descricao" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Descricao" class="form-control">
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="col-auto">
                    <span class="form-text">
                        Insira a descrição do Produto.
                    </span>
                </div>
            </div>

            <div class="row g-3 align-items-center  mb-3">
                <div class="col-2">
                    <label asp-for="QtdeEstoque" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="QtdeEstoque" class="form-control">
                    <span asp-validation-for="QtdeEstoque" class="text-danger"></span>
                </div>
                <div class="col-auto">
                    <span class="form-text">
                        Insira a quantidade de estoque maior que 0
                    </span>
                </div>
            </div>

            <div class="row g-3 align-items-center  mb-3">
                <div class="col-2">
                    <label asp-for="Validade" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Validade" class="form-control">
                    <span asp-validation-for="Validade" class="text-danger"></span>
                </div>
                <div class="col-auto">
                    <span class="form-text">
                        Insira uma data de válidade maior que a data atual
                    </span>
                </div>
            </div>
            <div class="row g-3 align-items-center  mb-3">
                <div class="col-2"></div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
